{
  "name": "checkers",
  "version": "1.0.0",
  "description": "An international draughts game.",
  "main": "index.html",
  "scripts": {
    "dev": "npm run tsc & npm run sass",
    "tsc": "tsc -w",
    "node-sass": "node-sass -w src -o build",
    "lint": "eslint . --ext .ts",
    "build": "npm run eslint && tsc && node-sass src -o build && postcss build/checkers.css --no-map -r -u autoprefixer",
    "commit": "git add . && git commit -m 'Deployment guard commit'",
    "publish": "npm run build && npm run commit || git push origin master"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/theninthsky/checkers.git"
  },
  "author": "Almog Gabay",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/theninthsky/checkers/issues"
  },
  "homepage": "https://theninthsky.github.io/checkers",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.3.0",
    "@typescript-eslint/parser": "^4.3.0",
    "autoprefixer": "^10.0.1",
    "eslint": "^7.10.0",
    "node-sass": "^4.14.1",
    "postcss-cli": "^7.1.0",
    "typescript": "^4.0.3"
  }
}
